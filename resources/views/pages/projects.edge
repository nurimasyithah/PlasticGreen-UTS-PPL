                    <!-- Kalkulator Jejak Karbon -->
                    <div class="col-lg-6 mb-5 d-flex justify-content-center">
                        <div class="p-4 w-100" style="background-color: #e6f4ea; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.05); max-width: 500px;">
                        <h3 class="mb-3 text-center" style="color:rgb(157, 218, 36);"> Kalkulator Jejak Karbon</h3>
                        <form id="carbonForm">
                            <label for="sedotan">Jumlah Sedotan Plastik per Hari:</label>
                            <input type="number" id="sedotan" name="sedotan" class="form-control mb-2" min="0" required>

                            <label for="botol">Jumlah Botol Plastik per Hari:</label>
                            <input type="number" id="botol" name="botol" class="form-control mb-2" min="0" required>

                            <label for="kantong">Jumlah Kantong Plastik per Hari:</label>
                            <input type="number" id="kantong" name="kantong" class="form-control mb-3" min="0" required>

                            <button type="submit" class="btn btn-success w-100"> Hitung Jejak Karbon</button>
                        </form>

                        <div id="hasil" class="mt-4 fw-bold text-success text-center"></div>
                        <div id="saran" class="mt-2 text-muted text-center"></div>
                        </div>
                    </div>
                    </div>
                </div>
             

                <!-- Script Kalkulasi -->
                <script>
                document.getElementById('carbonForm').addEventListener('submit', function(e) {
                e.preventDefault();

                const sedotan = parseInt(document.getElementById('sedotan').value) || 0;
                const botol = parseInt(document.getElementById('botol').value) || 0;
                const kantong = parseInt(document.getElementById('kantong').value) || 0;

                const emisiHarian = (sedotan * 0.1) + (botol * 0.25) + (kantong * 0.2);
                const emisiBulanan = emisiHarian * 30;
                const jumlahPohon = Math.ceil(emisiBulanan / 6); // 1 pohon menyerap ¬±6kg CO2 per bulan

                document.getElementById('hasil').innerHTML = 
                    `‚ôªÔ∏è Konsumsi plastikmu menghasilkan sekitar <strong>${emisiBulanan.toFixed(2)} kg CO‚ÇÇ</strong> per bulan. 
                    Dibutuhkan <strong>${jumlahPohon}</strong> pohon untuk menyerapnya! üå≥`;

                document.getElementById('saran').innerHTML = `
                    üí° <em>Coba kurangi dengan:</em><br>
                    - Membawa tumblr sendiri ‚òï<br>
                    - Gunakan tas belanja kain üõçÔ∏è<br>
                    - Hindari sedotan plastik üßÉ
                `;
                });
                </script>
